# MongoDB Connection
# For local development: mongodb://localhost:27017/Timewise
# For production: Use MongoDB Atlas connection string
MONGODB_URI=mongodb://localhost:27017/Timewise

# JWT Secret for authentication
# IMPORTANT: Change this to a strong random string in production!
JWT_SECRET=change-this-to-a-strong-random-secret-in-production

# API URL (auto-detected if not set)
NEXT_PUBLIC_API_URL=http://localhost:3000

# Email Configuration for Notifications
# Gmail SMTP settings (or use your email provider)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-specific-password

# Notification Settings
ENABLE_CRON=true
TIMEZONE=Asia/Kolkata

# App URL for email links
NEXT_PUBLIC_APP_URL=http://localhost:3000
